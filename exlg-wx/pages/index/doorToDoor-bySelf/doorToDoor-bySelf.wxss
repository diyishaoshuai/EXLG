.information {
    width: 90%;
    height: 250rpx;
    /* border: 1rpx solid; */
    margin: 0 auto;
    border-radius: 10rpx;
    box-shadow: 0 0 10rpx 8rpx #cdcfcf;
    display: flex;
    flex-direction: column;

}

.send,
.receive {
    width: 90%;
    height: 100rpx;
    /* border: 2rpx solid; */
    margin: auto;
    display: flex;
    align-items: center;

}



.text {
    border: solid;
    border-radius: 50rpx;
    height: 50rpx;
    width: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    /* margin-left: 10rpx; */
    font-weight: 900;
}

/* input{
    margin-left: 30rpx;
} */

.msg {
    margin-left: 30rpx;
    color: slategrey;
    width: 400rpx;
}

.incomingDataMsg{
    margin-left: 30rpx;
    width: 400rpx;    
    display: flex;
    flex-direction: column;
}


.up{
    display: flex;
    /* justify-content: space-between; */
}

.phoneNumberText{
    margin-left: 40rpx;
}

.detailedAddress{
    overflow: hidden;
    white-space: nowrap; 
    text-overflow: ellipsis;
    font-size: smaller
}

/* 横线 */
.line {
    width: 90%;
    border: 2rpx solid;
    margin: 0 auto;
}

.adress {
    height: 100%;
    width: 100rpx;
    margin-left: rpx;
    display: flex;
    align-items: center;
    border-left: 2rpx solid;
    padding-left: 20rpx;
}

/* 按钮 */
.btns {
    width: 90%;
    height: 70rpx;
    /* border: 2rpx solid; */
    margin: 25rpx auto;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.btns view {
    /* border: 2rpx solid; */
    height: 100%;
    width: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 900;

}

.left,
.right {
    /* background-color:rgb(236,236,236); */
    border-radius: 50rpx;
    /* color: #43DBD1 */
}

/* 上门取件/服务点自寄 */
.content {
    display: flex;
    align-items: center;
    flex-direction: column;
    margin-top: 30rpx;

    /* box-shadow: 0 0 10rpx 8rpx #cdcfcf; */
}

.doorToDoor {
    width: 90%;
    height: 300rpx;
    box-shadow: 0 0 10rpx 8rpx #cdcfcf;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    border-radius: 10rpx;
}

.bySelf {
    width: 90%;
    height: 200rpx;
    box-shadow: 0 0 10rpx 8rpx #cdcfcf;
    border-radius: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;

}

/* 时间选择器 */
.timeSelector,
.ObjSelector {
    width: 90%;
    height: 120rpx;
    /* border: 1rpx solid ; */
    display: flex;
    /* justify-content: center; */
    align-items: center;
    display: flex;
    justify-content: space-between;
}

.ObjSelector view{
    height: 120rpx;
    display: flex;
    align-items: center;
}

.unimportant{
    color: slategrey;
}


.timeSelector {
    border-bottom: 1rpx solid #cdcfcf;
}

/* 必填图标 */
.must {
    height: 35rpx;
    width: 60rpx;
    margin-left: 20rpx;
}

/* 结账 */
.counter {
    width: 100%;
    height: 150rpx;
    /* border: solid; */
    border-radius: 25rpx 25rpx 0 0;
    box-shadow: 0 0 10rpx 8rpx #cdcfcf;
    position: fixed;
    bottom: 0rpx;
    display: flex;
    /* justify-content: space-between; */
    align-items: center;
}

.btn {
    /* border: solid; */
    width: 150rpx;
    height: 70rpx;
    border-radius: 50rpx;
    margin-right: 70rpx;
    position: fixed;
    right: 10rpx;
    background-color: #43DBD1;
    display: flex;
    justify-content: center;
    align-items: center;    
    box-shadow: 0 0 10rpx 8rpx #cdcfcf;
}

.btn:active{
    background-color: #11999e;
}

.v-line {
    height: 90rpx;
    border-left: 4rpx solid slategrey;
    position: fixed;
    right: 300rpx;
}

.money {
    /* border: solid; */
    font-weight: 900;
    font-size: x-large;
    margin-left: 80rpx;
}



